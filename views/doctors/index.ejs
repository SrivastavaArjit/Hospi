<% layout('layout/boilerplate') %>
<div id="map" style="width: 100%; height: 400px"></div>
<h1 class="mt-5">Our Trusted Doctors</h1>
<% for(let doctor of doctors) {%>
<div class="row">
  <div class="offset-1 col-md-10">
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-3">
          <img class="img-fluid" alt="" src="<%= doctor.image %>" />
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title">
              <span><%= doctor.firstname%> </span>
              <span> <%= doctor.lastname %></span>
            </h5>
            <p class="card-text"><%= doctor.description %></p>
            <p class="car-text">
              <small class="text-muted"><%= doctor.location %></small>
            </p>
            <a href="/doctors/<%= doctor._id%>" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const doctors = {features: <%-JSON.stringify(doctors)%>}
</script>

<script src="/js/clusterMap.js"></script>
